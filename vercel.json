{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_BACKEND_URL": "https://sentinel-mockup.onrender.com",
    "BACKEND_URL": "https://sentinel-mockup.onrender.com"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://sentinel-mockup.onrender.com/api/:path*"
    }
  ]
} 